<main class="h-screen bg-mainColor flex flex-row-reverse">
  <section class="w-3/6 flex justify-center items-center">
    <div>
      <%= image_tag("ruby.png", width: 300) %>
    </div>
  </section>

  <section class="w-3/6 flex items-center justify-center">
    <div class="p-16 rounded-lg bg-formBack">
      <h2 class="text-white font-semibold text-3xl text-center py-3">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field flex flex-col">
          <%= f.label :email, class: "text-white text-lg p-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg text-sm font-semibold" %>
        </div>

        <div class="field flex flex-col">
          <%= f.label :password, class: "text-white text-lg  p-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "rounded-lg text-sm font-semibold" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field py-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions py-3 w-1/3">
          <div class="bg-signIn text-black font-semibold p-4 rounded-lg">
            <%= f.submit "Log in" %>
          </div>
        </div>
      <% end %>

    </div>
  </section>
</main>

