<%= form_with(model: @chapter, url: url, data: { controller: "reset", action:"submit->reset#resetForm"}) do |form|  %>
  <div class="flex flex-col py-4">
    <%= form.label :name, class: "text-white font-semibold" %>
    <%= form.text_field :name, class: "p-2 rounded-lg text-sm font-semibold" %>
  </div>

  <div class="flex flex-col py-4">
    <%= form.label :description, class: "text-white font-semibold" %>
    <%= form.text_field :description, class: "p-2 rounded-lg text-sm font-semibold" %>
  </div>

  <div class="flex py-2 justify-end gap-5">
    <span class="bg-chapterStrong p-2 rounded-lg">
      <%= form.submit "#{button_text}", class: "text-white font-semibold" %>
    </span>
    <span class="bg-removeIcon p-2 rounded-lg">
      <%= link_to 'Cancel', :back, class: "text-white font-semibold" %>
    </span>
  </div>
<% end %>